# Auto detect text files and perform LF normalization
* text=auto

# JavaScript files
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# CSS files
*.css text eol=lf

# HTML files
*.html text eol=lf
*.htm text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Images (treat as binary)
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text eol=lf

# Font files (treat as binary)
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Development configs
.gitattributes text eol=lf
.gitignore text eol=lf
.babelrc text eol=lf
*.yml text eol=lf
*.yaml text eol=lf